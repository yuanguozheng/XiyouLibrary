<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.JustYY.xiyoulibrary"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/myTheme" >
        <activity
            android:name="com.JustYY.xiyoulibrary.SplashActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.JustYY.xiyoulibrary.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="com.JustYY.xiyoulibrary.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="com.JustYY.xiyoulibrary.SearchActivity"
            android:label="@string/title_activity_search" >
        </activity>
        <activity
            android:name="com.JustYY.xiyoulibrary.NewBookActivity"
            android:label="@string/title_activity_new_book" >
        </activity>
        <activity
            android:name="com.JustYY.xiyoulibrary.RankActivity"
            android:label="@string/title_activity_rank" >
        </activity>
        <activity
            android:name="com.JustYY.xiyoulibrary.UserInfoActivity"
            android:label="@string/title_activity_user_info" >
        </activity>
        <activity
            android:name="com.zxing.activity.CaptureActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>
        <activity
            android:name="com.JustYY.xiyoulibrary.BorrowInfoActivity"
            android:label="@string/title_activity_borrow_info" >
        </activity>
        <activity
            android:name="com.JustYY.xiyoulibrary.FavActivity"
            android:label="@string/title_activity_fav" >
        </activity>
        <activity
            android:name="com.JustYY.xiyoulibrary.BookDetailActivity"
            android:label="@string/title_activity_book_detail"
            android:theme="@android:style/Theme.Holo.Light.Dialog" >
        </activity>
    </application>

</manifest>